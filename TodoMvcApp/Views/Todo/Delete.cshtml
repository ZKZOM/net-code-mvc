@model TodoMvcApp.Models.Todo

@{
    ViewData["Title"] = "删除待办事项";
}

<h1>删除待办事项</h1>

<div class="alert alert-danger mb-4">
    <h4 class="alert-heading">确认删除</h4>
    <p>您确定要删除这个待办事项吗？此操作不可撤销。</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">待删除的待办事项</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">标题</dt>
                    <dd class="col-sm-9">@Model.Title</dd>
                    
                    <dt class="col-sm-3">描述</dt>
                    <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "无" : Model.Description)</dd>
                    
                    <dt class="col-sm-3">状态</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsComplete)
                        {
                            <span class="badge bg-success">已完成</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">进行中</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">创建日期</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                    
                    <dt class="col-sm-3">截止日期</dt>
                    <dd class="col-sm-9">
                        @(Model.DueDate.HasValue ? Model.DueDate.Value.ToString("yyyy-MM-dd") : "无")
                    </dd>
                </dl>
                
                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex">
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-trash"></i> 确认删除
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> 返回列表
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 