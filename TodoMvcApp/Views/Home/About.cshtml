@{
    ViewData["Title"] = "关于我们";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1 class="display-4">关于待办事项管理系统</h1>
            <hr />
            <p class="lead">
                这是一个使用ASP.NET Core MVC和Entity Framework Core构建的待办事项管理系统。
            </p>
            
            <h2 class="mt-5">技术栈</h2>
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">后端技术</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li><i class="bi bi-check-circle-fill text-success me-2"></i> ASP.NET Core 8.0</li>
                                <li><i class="bi bi-check-circle-fill text-success me-2"></i> Entity Framework Core</li>
                                <li><i class="bi bi-check-circle-fill text-success me-2"></i> SQL Server</li>
                                <li><i class="bi bi-check-circle-fill text-success me-2"></i> Docker 容器化</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">前端技术</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li><i class="bi bi-check-circle-fill text-success me-2"></i> Bootstrap 5</li>
                                <li><i class="bi bi-check-circle-fill text-success me-2"></i> jQuery</li>
                                <li><i class="bi bi-check-circle-fill text-success me-2"></i> Razor 视图引擎</li>
                                <li><i class="bi bi-check-circle-fill text-success me-2"></i> Bootstrap Icons</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
            <h2 class="mt-5">主要功能</h2>
            <div class="card mt-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="bi bi-check-lg text-primary me-2"></i> 创建和管理待办事项</li>
                                <li><i class="bi bi-check-lg text-primary me-2"></i> 设置截止日期</li>
                                <li><i class="bi bi-check-lg text-primary me-2"></i> 标记完成状态</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="bi bi-check-lg text-primary me-2"></i> 查看待办事项列表</li>
                                <li><i class="bi bi-check-lg text-primary me-2"></i> 编辑现有待办事项</li>
                                <li><i class="bi bi-check-lg text-primary me-2"></i> 删除待办事项</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">项目信息</h5>
                </div>
                <div class="card-body">
                    <p><strong>版本：</strong> 1.0.0</p>
                    <p><strong>发布日期：</strong> 2023年5月</p>
                    <p><strong>开发环境：</strong> Visual Studio 2022</p>
                    <p><strong>部署环境：</strong> Docker</p>
                    <p><strong>数据库：</strong> SQL Server</p>
                </div>
            </div>
            
            <div class="card mt-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">联系我们</h5>
                </div>
                <div class="card-body">
                    <p><i class="bi bi-envelope me-2"></i> support@example.com</p>
                    <p><i class="bi bi-github me-2"></i> <a href="https://github.com/example/todo-mvc-app" target="_blank">GitHub 仓库</a></p>
                    <p><i class="bi bi-globe me-2"></i> <a href="https://www.example.com" target="_blank">官方网站</a></p>
                </div>
            </div>
        </div>
    </div>
</div> 